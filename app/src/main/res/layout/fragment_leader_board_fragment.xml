<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.taan.hasani.moein.guess_it.Leader_board.leader_board_fragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.taan.hasani.moein.volley.com.taan.hasani.moein.guess_it.game_menu.Leader_Board">


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="49dp"
            android:text="جایگاه شما :"
            android:textColor="#424242"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="@+id/textView8"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/your_place_frag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="49dp"
            android:textColor="#1565c0"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="TextView" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="304dp"
            android:layout_height="16dp"
            android:layout_marginTop="14dp"
            android:text="____________________________________________________________________________________________________"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/your_place_frag" />

        <ScrollView
            android:id="@+id/scollView"
            android:layout_width="340dp"
            android:layout_height="346dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="0dp"
            android:fadeScrollbars="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.514"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:layout_constraintVertical_bias="0.0">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/scores_p1_frag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:textColor="#424242"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/wordScore_frag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/scores_p1_frag" />

                <TextView
                    android:id="@+id/scores_p2_frag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/wordScore_frag"
                    android:text=""
                    android:textColor="#fcf400"
                    android:textStyle="bold" />

            </RelativeLayout>


        </ScrollView>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
