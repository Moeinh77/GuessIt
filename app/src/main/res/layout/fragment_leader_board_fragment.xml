<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.taan.hasani.moein.guess_it.Leader_board.leader_board_fragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.taan.hasani.moein.volley.com.taan.hasani.moein.guess_it.game_menu.Leader_Board">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="49dp"
            android:text="جایگاه شما :"
            android:textColor="#424242"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="@+id/textView8"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/your_place_frag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="49dp"
            android:textColor="#1565c0"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="TextView" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="304dp"
            android:layout_height="16dp"
            android:layout_marginTop="14dp"
            android:text="____________________________________________________________________________________________________"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/your_place_frag" />


        <ListView
            android:id="@+id/listview_leaderboard"
            android:layout_width="313dp"
            android:layout_height="319dp"
            android:fadeScrollbars="false"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:divider="@color/colorPrimaryDark"
            android:dividerHeight="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:layout_constraintVertical_bias="0.042"
            app:layout_constraintHorizontal_bias="0.51" />

        <ProgressBar
            android:id="@+id/progressBar_leaderboard"
            style="?android:attr/progressBarStyle"
            android:layout_width="200dp"
            android:layout_height="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
